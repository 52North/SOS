<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <joined-subclass name="org.n52.sos.ds.hibernate.entities.observation.legacy.valued.BlobValuedLegacyObservation"
        extends="org.n52.sos.ds.hibernate.entities.observation.legacy.AbstractValuedLegacyObservation" 
        table="blobValue">
        <comment>Value table for blob observation</comment>
        <key foreign-key="observationBlobValueFk">
            <column name="observationId">
                <comment>Foreign Key (FK) to the related observation from the observation table. Contains
                    "observation".observationid</comment>
            </column>
        </key>
        <property name="value" 
                    type="blob">
            <column name="value">
                <comment>Blob observation value</comment>
            </column>
        </property>
    </joined-subclass>
</hibernate-mapping>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="responseWriterRepository"
         class="org.n52.iceland.encode.ResponseWriterRepository" />

    <!-- ResponseWriterFactory implementations from bindings/soap -->
    <bean class="org.n52.sos.encode.SoapResponseWriterFactory"/>
    <bean class="org.n52.sos.encode.SoapChainResponseWriterFactory"/>
    <!-- ResponseWriterFactory implementations from coding/json -->
    <bean class="org.n52.sos.encode.json.JSONResponseWriterFactory"/>
    <!-- ResponseWriterFactory implementations from coding/exi -->
    <bean class="org.n52.sos.encode.EXIResponseWriterFactory"/>
    <!-- ResponseWriterFactory implementations from core/api -->
    <bean class="org.n52.sos.encode.XmlResponseWriterFactory"/>
    <bean class="org.n52.sos.encode.AbstractServiceResponseWriterFactory"/>
    <bean class="org.n52.sos.encode.BinaryAttachmentResponseWriterFactory"/>

</beans>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    <!--
        org.n52.iceland.config.SettingDefinitionProvider
    -->

    <!-- SettingDefinitionProvider implementations from operations/core-v20 -->
    <bean class="org.n52.sos.request.operator.CoreProfileOperatorSettings"/>


    <bean id="serviceSettingsGroup" class="org.n52.iceland.config.SettingDefinitionGroup">
        <property name="title" value="Service" />
        <property name="order" value="2" />
    </bean>

    <bean class="org.n52.iceland.config.settings.UriSettingDefinition">
        <property name="group" ref="serviceSettingsGroup" />
        <property name="order" value="0" />
        <property name="key" value="service.sosUrl" />
        <property name="title" value="SOS URL" />
        <property name="description">
            <value><![CDATA[The endpoint URL of this sos which will be shown in the GetCapabilities response (e.g. <code>http://localhost:8080/52nSOS/sos</code> or <code>http://localhost:8080/52nSOS/service</code>). The path to a specific binding (like <code>/soap</code>) will appended to this URL. For detailed information, please read the <a href=\"https://wiki.52north.org/bin/view/SensorWeb/SensorObservationServiceIVDocumentation\">documentation</a>.]]></value>
        </property>
    </bean>

    <bean class="org.n52.iceland.config.settings.StringSettingDefinition">
        <property name="group" ref="serviceSettingsGroup" />
        <property name="order" value="7" />
        <property name="key" value="service.sensorDirectory" />
        <property name="defaultValue" value="/sensors" />
        <property name="optional" value="true" />
        <property name="title" value="Sensor Directory" />
        <property name="description">
            <value><![CDATA[The path to a directory with the sensor descriptions in SensorML format. It can be either an absolute path (like <code>/home/user/sosconfig/sensors</code>) or a path relative to the web application classes directory (e.g. <code>WEB-INF/classes/sensors</code>).]]></value>
        </property>
    </bean>

    <bean class="org.n52.iceland.config.settings.BooleanSettingDefinition">
        <property name="group" ref="serviceSettingsGroup" />
        <property name="order" value="11" />
        <property name="key" value="service.useDefaultPrefixes" />
        <property name="defaultValue" value="false" />
        <property name="optional" value="true" />
        <property name="title" value="Use default prefixes for offering, procedure, features" />
        <property name="description">
            <value><![CDATA[Use default prefixes for offering, procedure, features.]]></value>
        </property>
    </bean>

    <bean class="org.n52.iceland.config.settings.BooleanSettingDefinition">
        <property name="group" ref="serviceSettingsGroup" />
        <property name="order" value="12" />
        <property name="key" value="service.encodeFullChildrenInDescribeSensor" />
        <property name="defaultValue" value="true" />
        <property name="title" value="Encode full for child procedure SensorML in parent DescribeSensor responses" />
        <property name="description">
            <value><![CDATA[Whether to encode full SensorML for each child procedures in a DescribeSensor response for a parent procedure.]]></value>
        </property>
    </bean>

    <bean class="org.n52.iceland.config.settings.BooleanSettingDefinition">
        <property name="group" ref="serviceSettingsGroup" />
        <property name="order" value="13" />
        <property name="key" value="service.jdbc.deregister" />
        <property name="defaultValue" value="true" />
        <property name="title" value="Deregister JDBC driver" />
        <property name="description">
            <value><![CDATA[Should the service deregister all used JDBC driver (SQLite, PostgreSQL or H2) during shutdown process.]]></value>
        </property>
    </bean>

    <bean class="org.n52.iceland.config.settings.BooleanSettingDefinition">
        <property name="group" ref="serviceSettingsGroup" />
        <property name="order" value="14" />
        <property name="key" value="service.addOutputsToSensorML" />
        <property name="defaultValue" value="true" />
        <property name="title" value="Add outputs to DescribeSensor SensorML responses" />
        <property name="description">
            <value><![CDATA[Whether to query example observations and dynamically add outputs to DescribeSensor SensorML responses.]]></value>
        </property>
    </bean>

    <bean class="org.n52.iceland.config.settings.BooleanSettingDefinition">
        <property name="group" ref="serviceSettingsGroup" />
        <property name="order" value="15" />
        <property name="key" value="service.strictSpatialFilteringProfile" />
        <property name="defaultValue" value="false" />
        <property name="title" value="Should this SOS support strict Spatial Filtering Profile?" />
        <property name="description">
            <value><![CDATA[Whether the SOS should support strict SOS 2.0 Spatial Filtering Profile. That means each observation should contain a om:parameter with sampling geometry. Else the SOS allows observations without om:parameter with sampling geometry!]]></value>
        </property>
    </bean>

     <bean class="org.n52.iceland.config.settings.BooleanSettingDefinition">
        <property name="group" ref="serviceSettingsGroup" />
        <property name="order" value="16" />
        <property name="key" value="service.response.validate" />
        <property name="defaultValue" value="false" />
        <property name="title" value="Should this SOS validate the XML response in non debug mode?" />
        <property name="description">
            <value><![CDATA[Whether the SOS should validate the XML response when the debug mode is disables!]]></value>
        </property>
    </bean>

    <!-- SettingDefinitionProvider implementations from core/api -->
    <bean class="org.n52.iceland.ogc.ows.ServiceProviderFactorySettings"/>
    <bean class="org.n52.iceland.ogc.ows.ServiceIdentificationFactorySettings"/>
    <bean class="org.n52.iceland.service.MiscSettings"/>
    <bean class="org.n52.iceland.service.StreamingSettings"/>
    <bean class="org.n52.sos.service.ProcedureDescriptionSettings"/>
    <bean class="org.n52.sos.service.TransactionalSecuritySettings"/>
    <bean class="org.n52.iceland.ds.FeatureQuerySettingsProvider"/>
    <bean class="org.n52.iceland.i18n.I18NSettings"/>






    <!-- SettingDefinitionProvider implementations from bindings/rest/code -->
    <bean class="org.n52.sos.binding.rest.RestSettings"/>
    <!-- SettingDefinitionProvider implementations from converter/identifier-modifier/prefixed-identifier -->
    <!-- SettingDefinitionProvider implementations from converter/identifier-modifier/flexible-identifier -->
    <bean class="org.n52.sos.converter.util.FlexibleIdentifierSettings"/>
    <!-- SettingDefinitionProvider implementations from coding/exi -->
    <bean class="org.n52.sos.exi.EXISettings"/>
    <!-- SettingDefinitionProvider implementations from coding/ows-v110 -->
    <bean class="org.n52.sos.encode.OwsEncoderSettings"/>
    <!-- SettingDefinitionProvider implementations from core/cache -->
    <bean class="org.n52.sos.cache.ctrl.ScheduledContentCacheControllerSettings"/>
    <bean class="org.n52.sos.cache.ctrl.persistence.AsyncCachePersistenceStrategySettings"/>
    <!-- SettingDefinitionProvider implementations from hibernate/dao -->
    <bean class="org.n52.sos.ds.hibernate.values.HibernateStreamingSettings"/>
    <!-- SettingDefinitionProvider implementations from hibernate/common -->
    <bean class="org.n52.sos.ds.hibernate.CacheFeederSettingDefinitionProvider"/>
    <!-- SettingDefinitionProvider implementations from extensions/inspire/code -->
    <bean class="org.n52.sos.inspire.settings.InspireSettings"/>
    <!-- SettingDefinitionProvider implementations from extensions/gda/operation -->
    <bean class="org.n52.sos.gda.GetDataAvailabilitySettings"/>
    <!-- SettingDefinitionProvider implementations from extensions/aqd/api -->
    <bean class="org.n52.sos.settings.EReportingSetting"/>

</beans>

{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://www.52north.org/schema/json/BaseObservation#",
  "type": "object",
  "required": [
    "phenomenonTime",
    "resultTime",
    "procedure",
    "observedProperty",
    "featureOfInterest"
  ],
  "properties": {
    "type": {
      "type": "string"
    },
    "identifier": {
      "type": "object",
      "required": [
        "value"
      ],
      "properties": {
        "value": {
          "type": "string"
        },
        "codespace": {
          "type": "string",
          "default": "http://www.opengis.net/def/nil/OGC/0/unknown"
        }
      }
    },
    "procedure": {
      "type": "string"
    },
    "parameter": {
      "oneOf": [
        {
          "$ref": "http://www.52north.org/schema/json/Parameter#"
        },
        {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://www.52north.org/schema/json/Parameter#"
          }
        }
      ]
    },
    "observedProperty": {
      "type": "string"
    },
    "phenomenonTime": {
      "$ref": "http://www.52north.org/schema/json/TimePrimitive#"
    },
    "validTime": {
      "$ref": "http://www.52north.org/schema/json/TimePeriod#"
    },
    "resultTime": {
      "$ref": "http://www.52north.org/schema/json/TimeInstant#"
    },
    "featureOfInterest": {
      "oneOf": [
        {
          "$ref": "http://www.52north.org/schema/json/FeatureOfInterest#"
        },
        {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://www.52north.org/schema/json/FeatureOfInterest#"
          }
        }
      ]
    }
  }
}
{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://www.52north.org/schema/json/sos/request/Request#",
  "type": "object",
  "required": [
    "request",
    "service"
  ],
  "properties": {
    "request": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "enum": [
        "1.0.0",
        "2.0.0"
      ]
    },
    "service": {
      "type": "string",
      "enum": [
        "SOS"
      ]
    },
    "extensions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/extension"
      }
    }
  },
  "definitions": {
    "extension": {
      "type": "object",
      "required": [
	    "definition",
	    "value"
	  ],
	  "additionalProperties": false,
	  "properties": {
	    "definition": {
	      "type": "string"
	    },
	    "value": {
	      "type": [
            "boolean",
            "string"
          ]
	    }
	  }
    }
  }
}

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.n52.series.api.v1.db.da.beans">
  <class name="FeatureEntity" table="station">
    <id name="pkid" type="long">
      <column name="stationid"/>
      <generator class="assigned"/>
    </id>
    <property column="identifier" insert="false" name="domainId" type="string" update="false"/>
    <property column="name" name="name" type="string"/>
    <property column="description" name="description" type="string"/>
    <property name="geom" type="org.hibernate.spatial.GeometryType" formula="(select 
                        foi.geom from series s, samplingpoint sp, featureofinterest foi 
                        where stationid = sp.station and sp.samplingpointid = s.samplingpointid 
                        and s.featureofinterestid = foi.featureofinterestid limit 1)" />
  </class>
</hibernate-mapping>

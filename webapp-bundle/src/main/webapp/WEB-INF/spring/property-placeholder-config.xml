<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:ctx="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.2.xsd">

    <ctx:property-placeholder location="classpath:/custom-application.properties"
        ignore-resource-not-found="true" ignore-unresolvable="true" order="0" />

    <ctx:property-placeholder location="${custom.properties.file}"
        ignore-resource-not-found="true" ignore-unresolvable="true" order="1" />

    <ctx:property-placeholder location="classpath:/application.properties"
        ignore-resource-not-found="false" ignore-unresolvable="false" order="2" />

</beans>

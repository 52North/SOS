<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:ctx="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <!-- load the admin controllers -->
    <ctx:component-scan base-package="org.n52.sos.web.admin" />

    <!-- default logging backend configurator -->
    <bean class="org.n52.sos.web.admin.LogBackLoggingConfigurator" />

    <import resource="sos-context.xml" />

    <bean class="org.n52.sos.config.sqlite.SQLiteCapabilitiesExtensionService">
        <property name="sessionFactory" ref="configurationSQLiteSessionFactory" />
    </bean>

</beans>

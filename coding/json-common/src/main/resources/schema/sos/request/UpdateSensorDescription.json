{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://www.52north.org/schema/json/sos/request/UpdateSensorDescription#",
  "allOf": [
    {
      "$ref": "http://www.52north.org/schema/json/sos/request/Request#"
    },
    {
      "required": [
        "version",
        "procedure",
        "procedureDescriptionFormat",
        "procedureDescription"
      ],
      "properties": {
        "request": {
          "enum": [
            "UpdateSensorDescription"
          ]
        },
        "procedure": {
          "type": "string",
          "format": "uri"
        },
        "procedureDescriptionFormat": {
          "type": "string",
          "format": "uri"
        },
        "procedureDescription": {
          "oneOf": [
            {
              "$ref": "#/definitions/procedureDescription"
            },
            {
              "type": "array",
              "minItems": 1,
              "items": {
                "$ref": "#/definitions/procedureDescription"
              }
            }
          ]
        }
      }
    }
  ],
  "definitions": {
    "procedureDescription": {
      "type": [
        "string",
        "object"
      ],
      "required": [
        "description"
      ],
      "properties": {
        "description": {
          "type": "string"
        },
        "validTime": {
          "$ref": "http://www.52north.org/schema/json/TimePrimitive#"
        }
      }
    }
  }
}
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:ctx="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.2.xsd">

    <mvc:annotation-driven />
    <ctx:annotation-config />

    <bean id="categoryRepository" class="org.n52.series.db.da.v1.CategoryRepository" />
    <bean id="featureRepository" class="org.n52.series.db.da.v1.FeatureRepository" />
    <bean id="phenomenonRepository" class="org.n52.series.db.da.v1.PhenomenonRepository" />
    <bean id="procedureRepository" class="org.n52.series.db.da.v1.ProcedureRepository" />
    <bean id="stationRepository" class="org.n52.series.db.da.v1.StationRepository">
        <property name="databaseSrid" value="EPSG:4326" />
    </bean>
    <bean id="timeseriesRepository" class="org.n52.series.db.da.v1.TimeseriesRepository" />
    <bean id="serviceRepository" class="org.n52.series.db.da.v1.ServiceRepository" />

    <bean id="serviceParameterService" class="org.n52.series.db.srv.v1.ServiceAccessService">
        <constructor-arg index="0" ref="serviceRepository" />
        <constructor-arg index="1" ref="timeseriesRepository" />
    </bean>
    <bean id="offeringParameterService" class="org.n52.series.db.srv.v1.AccessService">
        <constructor-arg index="0" ref="procedureRepository" />
    </bean>
    <bean id="categoryParameterService" class="org.n52.series.db.srv.v1.AccessService">
        <constructor-arg index="0" ref="categoryRepository" />
    </bean>
    <bean id="featureParameterService" class="org.n52.series.db.srv.v1.AccessService">
        <constructor-arg index="0" ref="featureRepository" />
    </bean>
    <bean id="procedureParameterService" class="org.n52.series.db.srv.v1.AccessService">
        <constructor-arg index="0" ref="procedureRepository" />
    </bean>
    <bean id="phenomenonParameterService" class="org.n52.series.db.srv.v1.AccessService">
        <constructor-arg index="0" ref="phenomenonRepository" />
    </bean>
    <bean id="stationParameterService" class="org.n52.series.db.srv.v1.AccessService">
        <constructor-arg index="0" ref="stationRepository" />
    </bean>
    <bean id="timeseriesService" class="org.n52.series.db.srv.v1.TimeseriesAccessService">
        <constructor-arg index="0" ref="timeseriesRepository" />
    </bean>
</beans>

<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- exception event handlers -->
	<bean id="codedExceptionEventHandler" class="org.n52.sos.statistics.impl.handlers.exceptions.CodedExceptionEventHandler" scope="prototype" />
	<bean id="owsExceptionEventHandler" class="org.n52.sos.statistics.impl.handlers.exceptions.OwsExceptionEventHandler" scope="prototype" />

	<!-- exception resolver -->
	<bean id="exceptionEventResolver" class="org.n52.sos.statistics.impl.resolvers.ExceptionEventResolver" scope="prototype">
		<property name="handlers">
			<map>
				<entry key="CodedException" value-ref="codedExceptionEventHandler"></entry>
				<entry key="default" value-ref="owsExceptionEventHandler"></entry>
			</map>
		</property>
	</bean>

</beans>
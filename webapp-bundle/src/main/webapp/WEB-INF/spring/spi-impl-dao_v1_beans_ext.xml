<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:ctx="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.2.xsd">

    <mvc:annotation-driven />
    <ctx:annotation-config />

    <bean name="platformRepository" class="org.n52.series.db.da.v1.PlatformRepository" />
    <bean name="seriesRepository" class="org.n52.series.db.da.v1.SeriesRepository" />
    <bean name="measurementDataRepository" class="org.n52.series.db.da.v1.MeasurementDataRepository" />
    <bean name="geometriesRepository" class="org.n52.series.db.da.v1.GeometriesRepository">
        <property name="databaseSrid" value="EPSG:4326" />
    </bean>

    <bean id="measurementSeriesService" name="measurementDataService"
        class="org.n52.series.db.srv.v1.ext.MeasurementSeriesAccessService">
        <constructor-arg index="0" ref="seriesRepository" />
    </bean>
    <bean id="platformParameterService" class="org.n52.series.db.srv.v1.AccessService">
        <constructor-arg index="0" ref="platformRepository" />
    </bean>
    <bean id="geometriesService" class="org.n52.series.db.srv.v1.AccessService">
        <constructor-arg index="0" ref="geometriesRepository" />
    </bean>
</beans>

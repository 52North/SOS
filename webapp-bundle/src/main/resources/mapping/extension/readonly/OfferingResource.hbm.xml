<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.n52.series.api.v1.db.da.beans">
    <!-- 
      If your database has full support for offerings (series.offeringid != null),
      replace the following definition with the uncommented definition with 'table="offering"'!
    -->
    <class name="OfferingEntity" table="`procedure`">
        <id name="pkid" type="long">
            <column name="procedureid" />
            <generator class="assigned" />
        </id>
    <!-- 
    <class name="OfferingEntity" table="offering">
        <id name="pkid" type="long">
            <column name="offeringid" />
            <generator class="assigned" />
        </id>
     -->
        
        <property name="domainId" column="identifier" type="string" insert="false" update="false"/>
        <property name="name" column="name" type="string" />
        <property name="description" column="description" type="string"/>
    </class>
</hibernate-mapping>

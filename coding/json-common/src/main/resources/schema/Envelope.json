{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://www.52north.org/schema/json/Envelope#",
    "type": "object",
    "required": [
        "lowerLeft",
        "upperRight"
    ],
    "properties": {
        "lowerLeft": {
            "type": "array",
            "items": [
                {
                    "type": "number"
                },
                {
                    "type": "number"
                }
            ]
        },
        "upperRight": {
            "type": "array",
            "items": [
                {
                    "type": "number"
                },
                {
                    "type": "number"
                }
            ]
        },
        "crs": {
            "type": "object",
            "required": [
                "type",
                "properties"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "link"
                    ]
                },
                "properties": {
                    "type": "object",
                    "required": [
                        "href"
                    ],
                    "properties": {
                        "href": {
                            "type": "string",
                            "format": "uri"
                        }
                    }
                }
            }
        }
    }
}
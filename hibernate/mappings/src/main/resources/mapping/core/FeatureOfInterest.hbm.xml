<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.n52.sos.ds.hibernate.entities.FeatureOfInterest">
        <subselect>
        	SELECT
			    @id:=@id+1 AS featureOfInterestId,
			    'F' AS hibernateDiscriminator,
			    1 AS featureOfInterestType,
    			table_name AS identifier,
    			1 AS codespace,
    			table_name AS name,
    			NULL AS geom,
    			NULL AS decriptionxml,
    			NULL AS url
			FROM
				(SELECT table_name
    			FROM information_schema.tables
    			WHERE table_schema = 'sea'
    			ORDER BY table_name) AS t1,
				(SELECT @id:=0) AS t2
        </subselect>
        <id name="featureOfInterestId" type="long" />
        <property name="hibernateDiscriminator" type="org.hibernate.type.TrueFalseType" insert="false" update="false" />
        <property name="featureOfInterestType"  type="long" insert="false" update="false" />
        <property name="identifier" type="string" insert="false" update="false" />
        <property name="codespace" type="long" insert="false" update="false" />
        <property name="name" type="org.hibernate.type.StringClobType" insert="false" update="false" />
        <property name="geom" type="org.hibernate.spatial.GeometryType" insert="false" update="false" />
        <property name="descriptionXml" type="org.hibernate.type.StringClobType" insert="false" update="false" />
        <property name="url" type="string" insert="false" update="false" />
        <!-- supports types double, big_decimal, and string -->
        <!--
        <property name="longitude" type="double">
           <column name="longitude" unique-key="featLonLatUk" />
        </property>
        <property name="latitude" type="double">
        	<column name="latitude" unique-key="featLonLatUk" />
        </property>
        <property name="altitude" type="double">
        	<column name="altitude" />
        </property>
        <property name="srid" type="integer">
        	<column name="srid" />
        </property>
        -->
    </class>
</hibernate-mapping>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">


    <!-- DataConnectionProvider implementations from hibernate/dao -->
    <!-- DataConnectionProvider implementations from hibernate/feature -->
    <bean id="sessionFactoryProvider" class="org.n52.sos.ds.hibernate.SessionFactoryProvider"/>

    <!-- FeatureQueryHandler implementations from hibernate/feature -->
    <bean id="featureQueryHandler" class="org.n52.sos.ds.hibernate.HibernateFeatureQueryHandler"/>


    <!-- I18NDAO implementations from hibernate/common -->
    <bean id="procedureI18NDAO" class="org.n52.sos.ds.hibernate.dao.i18n.ProcedureI18NDAO"/>
    <bean id="featureI18NDAO" class="org.n52.sos.ds.hibernate.dao.i18n.FeatureI18NDAO"/>
    <bean id="observablePropertyI18NDAO" class="org.n52.sos.ds.hibernate.dao.i18n.ObservablePropertyI18NDAO"/>
    <bean id="offeringI18NDAO" class="org.n52.sos.ds.hibernate.dao.i18n.OfferingI18NDAO"/>

    <!-- DeleteDeletedObservationDAO implementations from hibernate/dao -->
    <bean id="deleteDeletedObservationsDAO" class="org.n52.sos.ds.hibernate.admin.HibernateDeleteDeletedObservationsDAO"/>

    <!-- GeneralQueryDAO implementations from hibernate/dao -->
    <bean id="generalQueryDAO" class="org.n52.sos.ds.hibernate.admin.HibernateGeneralQueryDAO"/>

    <!-- AdditionalObservationCreator implementations from hibernate/common -->
    <bean class="org.n52.sos.ds.hibernate.util.observation.EReportingObservationCreator"/>

    <!-- HibernateProcedureDescriptionGeneratorFactory implementations from hibernate/common -->
    <bean class="org.n52.sos.ds.hibernate.util.procedure.generator.HibernateProcedureDescriptionGeneratorFactorySml101"/>
    <bean class="org.n52.sos.ds.hibernate.util.procedure.generator.HibernateProcedureDescriptionGeneratorFactorySml20"/>
    <bean class="org.n52.sos.ds.hibernate.util.procedure.generator.HibernateProcedureDescriptionGeneratorFactoryWml20"/>

    <!-- ProcedureFormatDAO implementations from hibernate/dao -->
    <bean id="procedureFormatDAO" class="org.n52.sos.ds.hibernate.admin.HibernateProcedureFormatDAO"/>


    <!-- RenameDAO implementations from hibernate/dao -->
    <bean id="renameDAO" class="org.n52.sos.ds.hibernate.admin.HibernateRenameDAO"/>

    <!-- DeleteObservationCacheFeederDAO implementations from extensions/do/hibernate -->
    <bean id="deleteObservationCacheFeederDAO" class="org.n52.sos.ext.deleteobservation.HibernateDeleteObservationCacheFeederDAO"/>

    <!-- CapabilitiesExtensionProvider implementations from hibernate/dao -->
    <bean id="insertSensorDAO" class="org.n52.sos.ds.hibernate.InsertSensorDAO"/>
    <bean id="insertResultDAO" class="org.n52.sos.ds.hibernate.InsertResultDAO"/>
    <bean id="insertResultTemplateDAO" class="org.n52.sos.ds.hibernate.InsertResultTemplateDAO"/>

</beans>
